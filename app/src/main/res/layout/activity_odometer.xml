<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_odometer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    tools:context="com.example.roe.smarthouseapp.OdometerActivity">

    <ImageView
        app:srcCompat="@drawable/automobile_icon"
        android:layout_gravity="center"
        android:layout_row="1"
        android:layout_column="0"/>

    <TextView
        android:text="Trip Distance Travelled: "
        android:id="@+id/trip_info"
        android:layout_gravity="center"
        android:layout_column="1"
        android:layout_row="0"/>

    <TextView
        android:text="Total Distance Travelled: "
        android:id="@+id/total_distance_info"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="center"/>

    <ImageButton
        app:srcCompat="@mipmap/ic_reset_trip"
        android:id="@+id/reset_trip"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_gravity="center"/>

</GridLayout>
