<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_auto_temperature"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roe.smarthouseapp.AutoTemperatureActivity"
    android:layout_gravity="center"
    android:columnCount="3"
    android:rowCount="8">

    <!-- Front Car -->

    <TextView android:layout_width="wrap_content"
              android:layout_row="0"
              android:layout_column="1"
              android:text="Front Vehicle Temperature"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_front_temp_up"
        android:id="@+id/front_temp_up"
        android:layout_marginStart="25dp"
        android:layout_row="2"
        android:layout_column="2"/>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@mipmap/ic_front_temp_down"
        android:id="@+id/front_temp_down"
        android:layout_marginStart="25dp"
        android:layout_row="2"
        android:layout_column="0"/>

    <SeekBar
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowSpan="1"
        android:max="50"
        android:progress="25"
        android:id="@+id/front_temp_bar"
        android:layout_gravity="center_vertical"/>

    <TextView android:layout_width="wrap_content"
              android:layout_row="3"
              android:layout_column="1"
              android:id="@+id/front_degrees"
              android:gravity="center_vertical|center_horizontal|center"
              android:layout_gravity="center"/>

    <!-- spacing -->

    <Space
        android:layout_column="1"
        android:layout_row="4"
        android:layout_height="50dp"/>

    <!-- Rear Car -->

    <TextView android:layout_width="wrap_content"
              android:layout_row="5"
              android:layout_column="1"
              android:text="Rear Vehicle Temperature"
              android:id="@+id/textView"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_rear_temp_up"
        android:id="@+id/rear_temp_up"
        android:layout_marginStart="25dp"
        android:layout_row="6"
        android:layout_column="2"/>

    <SeekBar
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_rowSpan="1"
        android:max="50"
        android:progress="25"
        android:id="@+id/rear_temp_bar"
        android:layout_gravity="center_vertical"/>

    <ImageButton
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:srcCompat="@mipmap/ic_rear_temp_down"
        android:id="@+id/rear_temp_down"
        android:layout_marginStart="25dp"
        android:layout_row="6"
        android:layout_column="0"/>

    <TextView android:layout_width="wrap_content"
              android:layout_row="7"
              android:layout_column="1"
              android:id="@+id/rear_degrees"
              android:gravity="center_vertical|center_horizontal|center"
              android:layout_gravity="center"/>


</GridLayout>
