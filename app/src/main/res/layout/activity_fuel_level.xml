<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fuel_level"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.roe.smarthouseapp.FuelLevelActivity"
    android:layout_gravity="center">

    <TextView
        android:text="E"
        android:layout_row="1"
        android:layout_column="0"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <Space
        android:layout_width="5dp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_gravity="center"/>

    <Space
        android:layout_width="5dp"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_gravity="center"/>

    <TextView
        android:text="F"
        android:layout_row="1"
        android:layout_column="4"
        android:textSize="24sp"/>

    <ImageView app:srcCompat="@mipmap/ic_fuel"
               android:layout_row="0"
               android:layout_column="2"
               android:layout_gravity="center"
               android:id="@+id/imageView2"/>

    <ProgressBar style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
                 android:visibility="visible"
                 tools:visibility="visible"
                 android:max="60"
                 android:progress="30"
                 android:layout_height="wrap_content"
                 android:layout_width="250dp"
                 android:layout_row="1"
                 android:layout_column="2"
                 android:id="@+id/fuel_bar"
                 android:layout_gravity="center"
                 android:elevation="19dp"/>

    <TextView
        android:text=""
        android:id="@+id/distance_display"
        android:layout_gravity="center"
        android:layout_row="2"
        android:layout_column="2"
        android:textSize="24sp"/>

    <Space
        android:layout_column="2"
        android:layout_row="3"
        android:layout_height="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:text="Re fuel"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_gravity="center"
        android:textSize="30dp"/>

    <ImageButton
        app:srcCompat="@mipmap/ic_refill"
        android:layout_row="4"
        android:layout_gravity="center"
        android:layout_column="2"
        android:id="@+id/refuel_button"/>
</GridLayout>
