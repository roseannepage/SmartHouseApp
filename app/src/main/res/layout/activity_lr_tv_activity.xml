<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lr_tv_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <TextView
        android:text="@string/TVRemoteTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitleid"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:text="@string/TVRemoteONOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tvtoggletext"

        android:gravity="center"
        android:layout_marginStart="92dp"
        android:layout_below="@+id/tvTitleid"
        android:layout_alignParentStart="false"
        android:layout_marginTop="35dp"

        android:layout_centerHorizontal="true"

        android:layout_centerInParent="true"
         />

    <ToggleButton
        android:text="@string/TVRemoteONOFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggleButton"
        tools:text="@string/TVRemoteONOFF"
        android:textOff="@string/TVRemoteToggleOFF"
        android:textOn="@string/TVRemoteToggleON"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/Tvtoggletext"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/channel_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton3"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView8" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lr_tv_enter"
        android:id="@+id/imageView"
        android:clickable="true"
        android:scaleX="2.2"
        android:scaleY="2.2"
        android:contentDescription="@string/channel_enter_button"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lr_tv_left"
        android:id="@+id/imageButton4"
        android:contentDescription="@string/volume_down_button"
        android:layout_below="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lr_tv_right"
        android:id="@+id/imageButton5"

        android:contentDescription="@string/volume_up_button"
        android:layout_below="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lr_tv_down"
        android:id="@+id/imageButton3"

        android:contentDescription="@string/channel_down_button"
        android:layout_below="@+id/imageButton5"
        android:layout_toEndOf="@+id/imageButton4" />

    <TextView
        android:text="@string/volume_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/imageView"
        android:layout_toEndOf="@+id/imageButton5" />

    <TextView
        android:text="@string/volume_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        tools:ignore="RelativeOverlap"
        android:layout_alignTop="@+id/imageView"
        android:layout_toStartOf="@+id/imageButton4" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_lr_tv_up"
        android:id="@+id/imageButton2"

        android:contentDescription="@string/channel_up_button"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/TVRemoteChannelSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/channeltext"

        android:gravity="center"

        android:layout_alignWithParentIfMissing="false"
        android:layout_centerInParent="false"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/toggleButton"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="3"
        android:id="@+id/channeledittext"
        android:text="@string/TVRemoteChannelS"
        android:gravity="center"

        android:layout_below="@+id/channeltext"
        android:layout_centerHorizontal="true"
        tools:ignore="LabelFor" />

    <TextView
        android:text="@string/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu"
        android:layout_centerInParent="false"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/imageView"
        android:gravity="center_vertical" />

    <TextView
        android:text="@string/channel_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_marginTop="23dp"
        android:layout_centerInParent="false"
        android:layout_below="@+id/channeledittext"
        android:layout_alignStart="@+id/channeltext" />

    <TextView
        android:text="@string/tvinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:gravity="center_horizontal"
        android:textSize="14sp"
        tools:ignore="SmallSp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
