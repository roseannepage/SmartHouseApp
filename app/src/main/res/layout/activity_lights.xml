<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lights"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_gravity="center"
    tools:context="com.example.roe.smarthouseapp.LightsActivity">

    <TextView
        android:text="Headlights"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <TextView
        android:text="OFF"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="center"
        android:id="@+id/off_indicator"/>

    <TextView
        android:text="ON"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="center"
        android:visibility="invisible"
        android:id="@+id/low_indicator"/>

    <TextView
        android:text="ON"
        android:textStyle="bold"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_gravity="center"
        android:id="@+id/high_indicator"
        android:visibility="invisible"/>

    <Space
        android:layout_row="3"
        android:layout_height="50dp"/>

    <TextView
        android:text="Indoor Lights"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>


    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:srcCompat="@mipmap/ic_dim"
        android:layout_row="5"
        android:layout_column="0"
        android:padding="0dp"
        android:layout_gravity="center"
        android:id="@+id/dim"/>


    <ImageView
        app:srcCompat="@mipmap/ic_brighten"
        android:layout_weight="1"
        android:padding="0dp"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_gravity="center"
        android:id="@+id/brighten"/>

    <RadioGroup
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/radio_group">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio1"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio2"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio3"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio4"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio5"/>
    </RadioGroup>

    <ImageButton
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_low_lights"
        android:id="@+id/low_lights"/>

    <ImageButton
        android:layout_row="1"
        android:layout_column="2"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_high_lights"
        android:id="@+id/high_lights"/>

    <ImageButton
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_off_lights"
        android:id="@+id/off_lights"/>

</GridLayout>
